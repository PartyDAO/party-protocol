{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "js",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES2021",
    "downlevelIteration": true
  },
  "include": ["tests/**/*.ts", "utils/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
